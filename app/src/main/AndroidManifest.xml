<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prasanth.alarm">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/a1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SampleAlarmActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".BroadCastReceiverActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.ALARM_SERVICE" /> -->
            <!-- </intent-filter> -->
        </receiver>

        <activity android:name=".NotificationWindowActivity"></activity>
    </application>

</manifest>